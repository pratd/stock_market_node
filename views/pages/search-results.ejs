<% include ../partials/header %>
	<div id="searchResults" class="market-values container py-5">
		<h3 class="mb-3 table-title">Search Results</h3>
		<%if (results.length != 0) { %>
			<div class="accordion" id="searchResult">
				<div class="card">
					<% for(var i=0; i < results.length; i++) { %>
						<div class="card-header" id="<%= 'heading-search-result' + results[i].id %>">
							<button class="btn-market btn btn-link d-flex justify-content-between align-items-center w-100" type="button" data-toggle="collapse" data-target="<%= '#search-result' + results[i].id %>" aria-expanded="false" aria-controls="<%= 'search-result' + results[i].id %>">
								<div class="left-side-els">
									<img width="36" src="<%= '/images/markets/' + results[i].id + '.png' %>">
									<span><%= results[i].symbol %></span>
									<span><%= results[i].name %></span>
								</div>
								<div class="right-side-els d-none d-sm-block d-md-block d-lg-block d-xl-block">
									<span><%= results[i].price %> $</span>
								</div>
							</button>
						</div>
						<div id="<%= 'search-result' + results[i].id %>" class="collapse" aria-labelledby="<%= 'heading-search-result' + results[i].id %>" data-parent="#searchResult">
							<div class="card-body d-flex flex-column align-items-end">
								<div>
									<p class="mb-2 detailed-market-name d-sm-none d-md-none d-lg-none d-xl-none">Last price: $<%= results[0].price %></p>
									<%= results[i].description %>
								</div>
								<a href="<%= '/market?market=' + results[i].name %>"><button class="details-button">Go to detail</button></a>
							</div>
						</div>
					<% }; %>
				</div>
			</div>
		<% }else{ %>
			<p>Sorry, no market name matches your search</p>
		<% } %>
	</div>
<% include ../partials/footer %>